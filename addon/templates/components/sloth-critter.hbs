<svg viewBox="0 0 220 220" version="1.1" xmlns="http://www.w3.org/2000/svg">
  <a href="" {{action 'blink'}}>
    <g transform="rotate(90 110,110)">
      <g transform="translate(0,-90)">
        <!-- back arm -->
        <polygon points="20,193 130,193 150,150 20,160" fill="{{bodyColor}}" stroke="{{bodyColor}}"/>
        <ellipse cx="20" cy="176" rx="15" ry="18" fill="{{bodyColor}}"/>
        <!-- toes -->
        <ellipse cx="8" cy="165" rx="15" ry="5" fill="{{accentColor}}"/>
        <ellipse cx="8" cy="175" rx="15" ry="5" fill="{{accentColor}}"/>
        <ellipse cx="8" cy="185" rx="15" ry="5" fill="{{accentColor}}"/>
      </g>

      <g transform="translate(0,-40)">
        <!-- back arm -->
        <polygon points="20,193 130,193 150,150 20,160" fill="{{bodyColor}}" stroke="{{bodyColor}}"/>
        <ellipse cx="20" cy="176" rx="15" ry="18" fill="{{bodyColor}}"/>
        <!-- toes -->
        <ellipse cx="8" cy="165" rx="15" ry="5" fill="{{accentColor}}"/>
        <ellipse cx="8" cy="175" rx="15" ry="5" fill="{{accentColor}}"/>
        <ellipse cx="8" cy="185" rx="15" ry="5" fill="{{accentColor}}"/>
      </g>

      <!-- body -->
      <ellipse cx="120" cy="130" rx="53" ry="65" fill="{{bodyColor}}"/>

      <!-- belly -->
      <ellipse cx="100" cy="130" rx="30" ry="50" fill="{{lightContrastColor}}"/>

      {{#if speaking}}
        <g transform="translate(0,-40)">
          <!-- front arm -->
          <polygon points="20,193 130,193 150,150 20,160" fill="{{bodyColor}}" stroke="{{bodyColor}}"/>
          <ellipse cx="20" cy="176" rx="15" ry="18" fill="{{bodyColor}}"/>
          <!-- toes -->
          <ellipse cx="8" cy="165" rx="15" ry="5" fill="{{accentColor}}"/>
          <ellipse cx="8" cy="175" rx="15" ry="5" fill="{{accentColor}}"/>
          <ellipse cx="8" cy="185" rx="15" ry="5" fill="{{accentColor}}"/>
        </g>
      {{else}}
        <g transform="translate(-25,-80) rotate(130 130,193)">
          <!-- front arm -->
          <polygon points="20,193 130,193 150,150 20,160" fill="{{lightContrastColor}}" stroke="{{bodyColor}}" stroke-width="3"/>
          <ellipse cx="140" cy="170" rx="15" ry="18" fill="{{lightContrastColor}}"/>
          <!-- toes -->
          <ellipse cx="8" cy="165" rx="15" ry="5" fill="{{accentColor}}"/>
          <ellipse cx="8" cy="175" rx="15" ry="5" fill="{{accentColor}}"/>
          <ellipse cx="8" cy="185" rx="15" ry="5" fill="{{accentColor}}"/>
          <ellipse cx="20" cy="176" rx="15" ry="19" fill="{{bodyColor}}"/>
        </g>
      {{/if}}

      <!-- back leg -->
      <polygon points="20,193 130,193 150,150 20,160" fill="{{bodyColor}}" stroke="{{bodyColor}}"/>
      <ellipse cx="20" cy="176" rx="15" ry="18" fill="{{bodyColor}}"/>

      <!-- toes -->
      <ellipse cx="8" cy="165" rx="15" ry="5" fill="{{accentColor}}"/>
      <ellipse cx="8" cy="175" rx="15" ry="5" fill="{{accentColor}}"/>
      <ellipse cx="8" cy="185" rx="15" ry="5" fill="{{accentColor}}"/>

      <!-- head -->
      <ellipse cx="110" cy="65" rx="55" ry="55" fill="{{bodyColor}}"/>

      <g transform="{{inspect}}">
        <!-- eye sockets -->
        <ellipse cx="90" cy="65" rx="25" ry="30" fill="{{lightContrastColor}}"/>
        <ellipse cx="130" cy="65" rx="25" ry="30" fill="{{lightContrastColor}}"/>

        <ellipse cx="80" cy="76" rx="22" ry="15" fill="{{accentColor}}"/>
        <ellipse cx="140" cy="76" rx="22" ry="15" fill="{{accentColor}}"/>
        <!-- eyes -->
        {{#if blinking}}
          <polygon points="84,70 96,70 96,71 84,71 " fill="{{lightContrastColor}}"/>
          <polygon points="124,70 135,70 135,71 124,71 " fill="{{lightContrastColor}}"/>
        {{else}}
          <circle cx="92" cy="70" r="4" fill="{{lightContrastColor}}"/>
          <circle cx="128" cy="70" r="4" fill="{{lightContrastColor}}"/>
        {{/if}}

        <!-- nose  -->
        <ellipse cx="110" cy="87" rx="9" ry="7" fill="{{darkContrastColor}}"/>
        <path />
      </g>
    </g>
  </a>
</svg>
