<svg viewBox="0 0 220 220" version="1.1" xmlns="http://www.w3.org/2000/svg">
  <a href="" {{action 'blink'}}>
    <g transform="{{jump}}">
      <!-- wings -->
      {{#if moving}}
        <polygon points="64,90 68,102 75,110 35,130 5,100" fill="{{bodyColor}}" stroke="{{bodyColor}}" stroke-width="5" stroke-linejoin="round"/>
        <polygon points="156,90 152,102 145,110 185,130 215,100" fill="{{bodyColor}}" stroke="{{bodyColor}}" stroke-width="5" stroke-linejoin="round"/>
      {{else}}
        <polygon points="62,100 68,102 75,120 65,180 55,130" fill="{{bodyColor}}" stroke="{{bodyColor}}" stroke-width="5" stroke-linejoin="round"/>
        <polygon points="158,100 152,102 145,120 155,180 165,130" fill="{{bodyColor}}" stroke="{{bodyColor}}" stroke-width="5" stroke-linejoin="round"/>
      {{/if}}

      <!-- body -->
      <ellipse cx="110" cy="130" rx="53" ry="65" fill="{{bodyColor}}"/>

      <g transform="translate(0, -8)">
        <!-- legs -->
        <polygon points="58,130 80,205 105,205 110,190" fill="{{bodyColor}}"/>
        <polygon points="162,130 140,205 115,205 110,190" fill="{{bodyColor}}"/>
        <!-- toes left -->
        <ellipse cx="80" cy="205" rx="5" ry="7" fill="{{accentColor}}"/>
        <ellipse cx="90" cy="205" rx="5" ry="7" fill="{{accentColor}}"/>
        <ellipse cx="100" cy="205" rx="5" ry="7" fill="{{accentColor}}"/>

        <!-- toes right -->
        <ellipse cx="120" cy="205" rx="5" ry="7" fill="{{accentColor}}"/>
        <ellipse cx="130" cy="205" rx="5" ry="7" fill="{{accentColor}}"/>
        <ellipse cx="140" cy="205" rx="5" ry="7" fill="{{accentColor}}"/>
      </g>

      <!-- head -->
      <ellipse cx="110" cy="65" rx="55" ry="55" fill="{{bodyColor}}"/>

      <!-- belly -->
      <ellipse cx="110" cy="130" rx="42" ry="50" fill="{{lightContrastColor}}"/>

      <g transform="{{inspect}}">
        <!-- eye sockets -->
        <ellipse cx="90" cy="65" rx="25" ry="30" fill="{{lightContrastColor}}"/>
        <ellipse cx="130" cy="65" rx="25" ry="30" fill="{{lightContrastColor}}"/>
        <!-- eyes -->
        {{#if blinking}}
          <polygon points="84,70 96,70 96,71 84,71 " fill="{{darkContrastColor}}"/>
          <polygon points="124,70 135,70 135,71 124,71 " fill="{{darlContrastColor}}"/>
        {{else}}
          <circle cx="92" cy="70" r="4" fill="{{darkContrastColor}}"/>
          <circle cx="128" cy="70" r="4" fill="{{darkContrastColor}}"/>
        {{/if}}

        <!-- beak  -->
        <circle cx="110" cy="85" r="7" fill="{{lightContrastColor}}"/>
        <circle cx="107" cy="87" r="4" fill="{{noseColor}}"/>
        <circle cx="113" cy="87" r="4" fill="{{noseColor}}"/>
        {{#if speaking}}
          <polygon points="117,88 103,88 110,100" fill="{{darkContrastColor}}" />
          <polygon points="117,87 103,87 110,92" fill="{{noseColor}}" />
          <circle cx="185" cy="55" r="5" fill="{{lightContrastColor}}" stroke="{{lightContrastColor}}" stroke-width="1"/>
          <circle cx="205" cy="55" r="5" fill="{{lightContrastColor}}" stroke="{{lightContrastColor}}" stroke-width="1"/>
          <polyline points="190,55 190,25 210,25 210,55" fill="none" stroke="{{lightContrastColor}}" stroke-width="1" />
        {{else}}
          <polygon points="117,88 103,88 110,100" fill="{{noseColor}}" />
        {{/if}}
      </g>
    </g>
  </a>
</svg>
